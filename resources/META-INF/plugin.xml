<idea-plugin>
  <name>BarneyProgressBar</name>
  <version>1.0</version>
  <idea-version since-build="193"/>
  <vendor email="sunpeiting07@gmail.com">Peiting</vendor>

  <description><![CDATA[
      This is the Barney Progress Bar for IJ based IDEs based on the Mario Progress Bar by KikiManjaro.
      It display Barney with some rainbow for the basic bar and a dancing barney for the indeterminate one.
      <br>
      <br>
      DETERMINATE:
      <br>
      <img src="https://giphy.com/gifs/Zjt9OziGPbu94mMgKf" title="BarneyDeterminateBar" />
      <br>
      INDETERMINATE:
      <br>
      <img src="https://i.imgur.com/fdUDmZI.gif" title="BarneyIndeterminateBar" />
    ]]></description>

  <change-notes><![CDATA[
      <em>1.0 Creation of the Barney Progress Bar Project</em><br>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <applicationListeners>
    <listener class="ProgressBarLafManagerListener"
              topic="com.intellij.ide.ui.LafManagerListener" />
  </applicationListeners>
</idea-plugin>